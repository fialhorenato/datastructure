#include <stdio.h>
#include <stdlib.h>

typedef struct Polinomio Polinomio;

struct Polinomio {
	int coeficiente;
	int expoente;
	Polinomio *prox;
};

Polinomio* inicializa();
Polinomio* insere();
void imprime();
void ordena(Polinomio *lista);

int main(void) {
	puts("[I]nicializa \n I[n]sere \n I[m]prime \n [O]rdena");
	char op = getchar();
	switch (op) {
		case 'O' || 'o':
			ordena()

			break;
		default:
			break;
	}
	return EXIT_SUCCESS;
}

Polinomio* inicializa () {
	return NULL;
}

