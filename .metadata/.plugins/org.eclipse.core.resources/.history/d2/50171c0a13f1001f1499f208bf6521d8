#include <stdio.h>
#include <stdlib.h>

typedef struct Polinomio Polinomio;

struct Polinomio {
	int coeficiente;
	int expoente;
	Polinomio *prox;
};

Polinomio* inicializa();
Polinomio* insere();
void imprime(Polinomio *lista);
void ordena(Polinomio *lista);

int main(void) {
	Polinomio *listac;
	puts("[I]nicializa \n I[n]sere \n I[m]prime \n [O]rdena \n [S]air");
	char op = getchar();
	switch (op) {
		case 'O' || 'o':
			ordena(listac);
			break;

		case 'N' || 'n':
			listac = insere();
			break;

		case 'I' || 'i':
			listac = inicializa();
			break;

		case 'M' || 'm':
			imprime(listac);
			break;

		case 'S' || 's':
			break;

		default:
			puts ("Digite novamente!");
			break;
	}
	return EXIT_SUCCESS;
}

Polinomio* inicializa () {
	return NULL;
}

Polinomio* insere() {
	Polinomio *dado = malloc(sizeof(Polinomio));
	puts ("Digite o coeficiente: ");
	scanf ("%d", dado -> coeficiente);
	puts ("Digite o expoente: ");
	scanf ("%d", dado -> expoente);
	return dado;
}
